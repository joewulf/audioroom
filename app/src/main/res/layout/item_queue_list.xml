<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_default_stats"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/queue_item_round_bg"
        android:scaleType="center"
        tools:src="@drawable/queue_add_member" />


    <com.netease.audioroom.demo.widget.RippleImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@color/color_292929"
        app:imageViewHeigth="60dp"
        app:imageViewWidth="60dp"
        app:show_spacing_time="700" />

    <ImageView
        android:id="@+id/iv_user_status"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="是否为关闭状态"
        android:padding="@dimen/dimen_10" />

    <ImageView
        android:id="@+id/iv_user_status_hint"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignRight="@id/iv_user_avatar"
        android:layout_alignBottom="@id/iv_user_avatar"
        android:contentDescription="是否为屏蔽状态"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/tv_user_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:gravity="center"
        android:textColor="@color/color_ffffff"
        android:textSize="12sp"
        tools:text="麦位1" />


</RelativeLayout>